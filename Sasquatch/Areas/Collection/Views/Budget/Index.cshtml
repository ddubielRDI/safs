@model BudgetDashboardViewModel
@{
    ViewData["Title"] = "Budget Dashboard";
}

<div class="container-fluid">
    @* Workflow Tab Navigation *@
    @await Html.PartialAsync("_WorkflowTabs", Model.Tabs)

    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                <i class="bi bi-currency-dollar me-2"></i>Budget Submissions (F-195)
            </h1>
            <p class="text-muted mb-0">
                @Model.District?.DistrictName (@Model.District?.DistrictCode) - School Year @Model.SchoolYear
            </p>
        </div>
        <div class="col-auto d-flex align-items-center gap-3">
            <div class="btn-group">
                <a asp-action="Upload" class="btn btn-primary" data-instruction="upload-budget">
                    <i class="bi bi-upload me-1"></i>Upload Budget File
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-light">
            <strong>Budget Submissions</strong>
        </div>
        <div class="card-body p-0">
            @if (Model.Submissions.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th>Status</th>
                            <th class="text-end">Revenues</th>
                            <th class="text-end">Expenditures</th>
                            <th class="text-end">Balance</th>
                            <th class="text-center">Errors</th>
                            <th class="text-center">Warnings</th>
                            <th>Submitted</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in Model.Submissions)
                        {
                            <tr class="@(submission.IsLocked ? "table-secondary" : "")">
                                <td>
                                    <strong>@submission.BudgetType</strong>
                                    @if (submission.IsLocked)
                                    {
                                        <i class="bi bi-lock-fill text-warning ms-1" title="Locked"></i>
                                    }
                                </td>
                                <td>
                                    @switch (submission.SubmissionStatus)
                                    {
                                        case "Draft":
                                            <span class="badge bg-secondary">Draft</span>
                                            break;
                                        case "Submitted":
                                            <span class="badge bg-primary">Submitted</span>
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Locked":
                                            <span class="badge bg-warning text-dark">Locked</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@submission.SubmissionStatus</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">@submission.TotalRevenues.ToString("C0")</td>
                                <td class="text-end">@submission.TotalExpenditures.ToString("C0")</td>
                                <td class="text-end">
                                    @if (submission.IsBalanced)
                                    {
                                        <span class="text-success">@submission.FundBalance.ToString("C0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">@submission.FundBalance.ToString("C0")</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (submission.ErrorCount > 0)
                                    {
                                        <span class="badge bg-danger">@submission.ErrorCount</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (submission.WarningCount > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@submission.WarningCount</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (submission.SubmittedDate.HasValue)
                                    {
                                        @submission.SubmittedDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@submission.SubmissionId" class="btn btn-outline-primary" data-instruction="view-submission">
                                            View
                                        </a>
                                        @if (!submission.IsLocked && submission.SubmissionStatus != "Approved")
                                        {
                                            <form asp-action="Delete" method="post" class="d-inline"
                                                  onsubmit="return confirm('Delete this submission and all associated data? This cannot be undone.');">
                                                <input type="hidden" name="submissionId" value="@submission.SubmissionId" />
                                                <button type="submit" class="btn btn-outline-danger" title="Delete submission">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No budget submissions for this school year.</p>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="bi bi-upload me-1"></i>Upload Budget Data
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-light">
                    <i class="bi bi-info-circle me-1"></i>F-195 Budget Guidelines
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Original budget due by August 31</li>
                        <li>Revised budgets can be submitted any time before year-end</li>
                        <li>Revenues must equal or exceed expenditures</li>
                        <li>All Program/Activity/Object codes must be valid</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-light">
                    <i class="bi bi-link-45deg me-1"></i>Resources
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li><a href="https://ospi.k12.wa.us/safs-data-files" target="_blank">SAFS Data Files</a></li>
                        <li><a href="#" class="text-muted">Accounting Manual (Coming Soon)</a></li>
                        <li><a href="#" class="text-muted">Code Table Reference (Coming Soon)</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.InstructionsJson != null)
{
    <script>
        window.workflowInstructions = @Html.Raw(ViewBag.InstructionsJson);
    </script>
}
