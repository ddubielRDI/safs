@model Sasquatch.Collection.ViewModels.StubWorkflowViewModel
@*
    Shared view for stub workflows that are "Coming Soon".
    Shows workflow description, planned features, and data source link.
*@

<div class="container-fluid">
    @* Workflow Tab Navigation *@
    @await Html.PartialAsync("_WorkflowTabs", Model.Tabs)

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <span class="display-1 text-muted">
                            <i class="bi bi-hourglass-split"></i>
                        </span>
                    </div>

                    <h1 class="h2 mb-3">@Model.WorkflowName</h1>

                    <span class="badge bg-info fs-6 mb-4">@Model.CurrentStatus</span>

                    <p class="lead text-muted mb-4">
                        @Model.WorkflowDescription
                    </p>

                    <hr class="my-4">

                    <div class="text-start">
                        <h5 class="mb-3">
                            <i class="bi bi-check2-square me-2"></i>Planned Features
                        </h5>
                        <ul class="list-group list-group-flush mb-4">
                            @foreach (var feature in Model.Features)
                            {
                                <li class="list-group-item bg-transparent ps-0">
                                    <i class="bi bi-check-circle text-success me-2"></i>@feature
                                </li>
                            }
                        </ul>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Model.DataSource" target="_blank" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-up-right me-1"></i>View SAFS Data Files
                        </a>
                        <a asp-area="Collection" asp-controller="Enrollment" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-1"></i>Go to Enrollment (P-223)
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.Stats != null)
            {
                <div class="card mt-4 border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <i class="bi bi-bar-chart me-2"></i>Sample Data Preview
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col">
                                <div class="h4 mb-0">@Model.Stats.Value</div>
                                <small class="text-muted">@Model.Stats.Label</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="alert alert-light border mt-4" role="alert">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="bi bi-info-circle-fill text-info fs-4"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="alert-heading">About This Workflow</h6>
                        <p class="mb-0 small">
                            The <strong>@Model.FormNumber</strong> workflow is part of the Washington State SAFS
                            (School Apportionment and Financial Services) system. This demo showcases the
                            modernized data collection infrastructure that will support all SAFS workflows.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
