<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sasquatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sasquatch.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bank me-2"></i>
                    <span>Sasquatch</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-collection me-1"></i>Data Collection
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Collection" asp-controller="Enrollment" asp-action="Index">
                                    <i class="bi bi-people me-2"></i>Enrollment (P-223)
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-currency-dollar me-2"></i>Budget (F-195)
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="Collection" asp-controller="Enrollment" asp-action="Upload">
                                    <i class="bi bi-upload me-2"></i>Upload Data
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calculator me-1"></i>Calculation
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Calculation" asp-controller="Production" asp-action="Index">
                                    <i class="bi bi-gear me-2"></i>Production
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Calculation" asp-controller="Sandbox" asp-action="Index">
                                    <i class="bi bi-box me-2"></i>Sandbox
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-file-earmark-text me-1"></i>Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Reporting" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-file-earmark-bar-graph me-2"></i>Enrollment Reports
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-file-earmark-spreadsheet me-2"></i>Budget Reports
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-filetype-xlsx me-2"></i>Export to Excel
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-shield-lock me-1"></i>OSPI Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Collection" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Collection" asp-controller="Admin" asp-action="Locks">
                                    <i class="bi bi-lock me-2"></i>Lock Controls
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Collection" asp-controller="Admin" asp-action="AuditLog">
                                    <i class="bi bi-journal-text me-2"></i>Audit Log
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>tumwater.admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text small text-muted">Tumwater School District</span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Switch Role</a></li>
                                <li><a class="dropdown-item" href="#">Sign Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <small>&copy; 2026 Sasquatch - Washington State OSPI</small>
                </div>
                <div class="col-auto">
                    <small class="text-muted">
                        <span class="badge bg-info">Demo</span>
                        School Year 2024-25
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
