@model Sasquatch.Collection.ViewModels.RoleSwitcherViewModel
@*
    Role Switcher View Component
    Dropdown for switching between demo roles (District, ESD, OSPI).
*@

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="role-badge me-2 @GetRoleBadgeClass(Model.CurrentRole)">
            <i class="bi @Model.CurrentRoleIcon"></i>
        </span>
        <span class="d-none d-md-inline">@Model.CurrentRoleDisplayName</span>
    </a>
    <ul class="dropdown-menu dropdown-menu-end role-switcher-menu">
        <li class="dropdown-header">
            <i class="bi bi-people-fill me-1"></i>Switch Demo Role
        </li>
        <li><hr class="dropdown-divider"></li>
        @foreach (var role in Model.AvailableRoles)
        {
            var isActive = role.Id == Model.CurrentRole;
            <li>
                <form asp-area="Collection" asp-controller="Home" asp-action="SwitchRole" method="post" class="d-inline w-100">
                    <input type="hidden" name="role" value="@role.Id" />
                    <button type="submit" class="dropdown-item d-flex align-items-center w-100 @(isActive ? "active" : "")">
                        <span class="role-badge me-2 @GetRoleBadgeClass(role.Id)">
                            <i class="bi @role.Icon"></i>
                        </span>
                        <div class="role-info text-start">
                            <div class="role-name">@role.DisplayName</div>
                            <div class="role-desc small text-muted">@role.Description</div>
                        </div>
                        @if (isActive)
                        {
                            <i class="bi bi-check-lg ms-auto text-success"></i>
                        }
                    </button>
                </form>
            </li>
        }
        <li><hr class="dropdown-divider"></li>
        <li class="dropdown-item-text small">
            <i class="bi bi-info-circle me-1"></i>
            Role affects visible workflows
        </li>
    </ul>
</li>

@functions {
    string GetRoleBadgeClass(string role) => role switch
    {
        "District" => "role-badge-district",
        "ESD" => "role-badge-esd",
        "OSPI" => "role-badge-ospi",
        _ => "role-badge-default"
    };
}

<style>
    /* Structural styles only - colors defined in site.scss */
    .role-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        font-size: 0.9rem;
    }

    .role-switcher-menu {
        min-width: 280px;
    }

    .role-switcher-menu .dropdown-item {
        padding: 0.5rem 1rem;
        border: none;
        background: transparent;
    }

    .role-switcher-menu button.dropdown-item {
        cursor: pointer;
    }

    .role-switcher-menu button.dropdown-item:hover {
        background-color: #e9ecef;
    }

    .role-switcher-menu .dropdown-item.active {
        background-color: #e9ecef;
        color: #212529;
    }

    .role-switcher-menu .dropdown-item.active .role-desc {
        color: #6c757d !important;
    }

    .role-info {
        flex: 1;
    }

    .role-name {
        font-weight: 500;
    }
</style>
